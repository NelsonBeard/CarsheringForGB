<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="car_name_style">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:translationY">-1.45sp</item>
        <item name="android:textColor">#141414</item>
    </style>

    <style name="text_view_style">
        <item name="android:drawablePadding">5.5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:paddingStart">9.5dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#141414</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="registration_number_style">
        <item name="android:padding">4dp</item>
        <item name="android:textColor">#888888</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

</resources>
